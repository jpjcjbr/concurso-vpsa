<div class="ajuste_conteudo">
	<%- model_class = Proposta.new.class -%>
	<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th><%= model_class.human_attribute_name(:id) %></th>
	      <th><%= model_class.human_attribute_name(:desenvolvedores) %></th>
	      <th><%= model_class.human_attribute_name(:titulo) %></th>
	      <th><%= model_class.human_attribute_name(:plataforma) %></th>
				<th><%= model_class.human_attribute_name(:status) %></th>
				<th>Data</th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @propostas.each do |proposta| %>
	      <tr>
					<% if user_signed_in? %>
		        <td><%= link_to proposta.id, proposta %></td>
					<% else %>
		        <td><%= proposta.id %></td>
					<% end %>
	        <td><%= proposta.desenvolvedores %></td>
	        <td><%= proposta.titulo %></td>
	        <td><%= proposta.plataforma %></td>
				  <td><%= proposta.status %></td>
				  <td><%= proposta.created_at.strftime("%d/%m/%Y %H:%M:%S") %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>