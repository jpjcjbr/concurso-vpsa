<%- model_class = @proposta.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:desenvolvedores) %>:</strong><br>
  <%= @proposta.desenvolvedores %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:email) %>:</strong><br>
  <%= @proposta.email %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:titulo) %>:</strong><br>
  <%= @proposta.titulo %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:objetivo) %>:</strong><br>
  <%= @proposta.objetivo %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:descricao) %>:</strong><br>
  <%= @proposta.descricao %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:plataforma) %>:</strong><br>
  <%= @proposta.plataforma %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              propostas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_proposta_path(@proposta), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              proposta_path(@proposta),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
